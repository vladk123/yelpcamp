<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/stylesheets/stars.css">

<div id="cluster-map"></div>
<br>
<div class="container">
    <% if (campgrounds.length) { %>
    <h1>Latest Campgrounds</h1>
    <% } else { %>
    <h1>No Campground Found. <a href="/campgrounds/new">Start a New One</a></h1>
    <% } %>
    <p><strong>Note:</strong> if you see any inappropriate content below, <a href="mailto:vlad.kapitantchouk@gmail.com?subject=Inappropriate%20Campground%20Listing&body=Campground link here: ______">please contact me asap!</a></p>

    <% for (let campground of campgrounds){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(campground.images.length) {%>
                <img class="img-fluid" alt="" src="<%=campground.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %> </h5>
                    <!-- average out reviews and show if exist -->
                    <% 
                        let ratingTotal = 0 
                        let ratingCount = 0 
                        let ratingAvg 
                        if (campground.reviews.length > 0){ 
                            for(review of campground.reviews){ 
                                ratingCount++ 
                                ratingTotal = ratingTotal + review.rating
                            } %>
                            <p class="starability-result" data-rating="<%=Math.round(ratingTotal/ratingCount)%>">
                                Rated: <%= ratingTotal/ratingCount %> stars
                            </p>
                    <% }
                    %>
                    
                    
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= campground.location%></small>
                    </p>
                    <a class="btn btn-primary btn-curved" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>